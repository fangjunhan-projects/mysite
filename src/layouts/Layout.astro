---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Junhan Fang - Biostatistician' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div class="wrapper">
      <header class="site-header">
        <h1 class="site-title"><a href={import.meta.env.BASE_URL || '/'}>Junhan Fang</a></h1>
        <img
          src="/img/Junhan_Fang_photo.jpeg"
          alt="Junhan Fang"
          class="avatar"
          width="200"
          height="200"
        />
        <p class="tagline">Trust in the you of now</p>
      </header>
      <main class="content">
        <slot />
      </main>
      <footer class="site-footer">
        <p><small>Hosted on GitHub Pages</small></p>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  :root {
    --text: #333;
    --bg: #fff;
    --border: #eaecef;
    --link: #0366d6;
    --link-visited: #551a8b;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --text: #e6edf3;
      --bg: #0d1117;
      --border: #30363d;
      --link: #58a6ff;
      --link-visited: #a371f7;
    }
  }

  html {
    font-size: 16px;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif;
    color: var(--text);
    background: var(--bg);
    line-height: 1.6;
  }

  .wrapper {
    max-width: 896px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .site-header {
    text-align: center;
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .site-title {
    font-size: 1.75rem;
    font-weight: 600;
    margin: 0 0 1rem;
  }

  .site-title a {
    color: var(--text);
    text-decoration: none;
  }

  .site-title a:hover {
    text-decoration: underline;
  }

  .avatar {
    border-radius: 6px;
    object-fit: cover;
    display: block;
    margin: 0 auto 1rem;
  }

  .tagline {
    margin: 0;
    color: var(--text);
    opacity: 0.9;
    font-size: 0.95rem;
  }

  .content {
    margin-bottom: 2rem;
  }

  .content :global(h2) {
    font-size: 1.35rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    padding-bottom: 0.25rem;
    border-bottom: 1px solid var(--border);
  }

  .content :global(h2:first-child) {
    margin-top: 0;
  }

  .content :global(p) {
    margin: 0 0 1rem;
  }

  .content :global(ul) {
    margin: 0 0 1rem;
    padding-left: 1.5rem;
  }

  .content :global(li) {
    margin-bottom: 0.35rem;
  }

  .content :global(a) {
    color: var(--link);
    text-decoration: none;
  }

  .content :global(a:hover) {
    text-decoration: underline;
  }

  .content :global(a:visited) {
    color: var(--link-visited);
  }

  .content :global(strong) {
    font-weight: 600;
  }

  .content :global(em) {
    font-style: italic;
  }

  .content :global(blockquote) {
    margin: 0 0 1rem;
    padding-left: 1rem;
    border-left: 4px solid var(--border);
    color: var(--text);
    opacity: 0.95;
  }

  .site-footer {
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
    text-align: center;
    color: var(--text);
    opacity: 0.8;
    font-size: 0.875rem;
  }

  .site-footer :global(small) {
    font-size: inherit;
  }
</style>
